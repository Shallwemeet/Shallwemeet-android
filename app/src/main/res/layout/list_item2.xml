<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginStart ="25dp"
    android:layout_marginTop="20dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:id="@+id/item2_card_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#80ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageview_img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitStart"
                        app:riv_corner_radius_top_right="10dp"
                        android:src="@drawable/watermelon"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                <TextView
                    android:id="@+id/imageview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:ems="13"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/imageview_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/imageview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/imageview_num_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사람 수"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/imageview_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    
    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_star_checkbox"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left|top"/>
</FrameLayout>