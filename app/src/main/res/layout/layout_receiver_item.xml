<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/receiver_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:riv_corner_radius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/receiver_image"
        app:layout_constraintRight_toRightOf="@id/receiver_btn">

        <TextView
            android:id="@+id/receiver_nickNave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"/>

        <TextView
            android:id="@+id/receiver_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"/>

        <TextView
            android:id="@+id/receiver_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제 여부"/>
    </LinearLayout>

    <Button
        android:id="@+id/receiver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청 수락"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>