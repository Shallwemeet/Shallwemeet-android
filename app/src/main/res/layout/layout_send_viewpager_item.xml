<FrameLayout android:id="@+id/apply_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sender_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_rounded_layout"
        android:padding="10dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/sender_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="제목"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sender_location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="#ffffff"
                android:textStyle="bold"

                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text=","/>

            <TextView
                android:id="@+id/sender_location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="9sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sender_num_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_type"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="12sp"/>


        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</FrameLayout>