<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edge">

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/send_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="#D2D1D6"
            app:dotsCornerRadius="8dp"
            app:dotsSize="6dp"
            app:dotsSpacing="5dp"
            app:dotsWidthFactor="2.5"
            app:layout_constraintBottom_toTopOf="@id/send_viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:progressMode="true"
            app:selectedDotColor="#3F3FFF"
            android:layout_marginTop="10dp"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/send_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/send_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_textview"
        android:text="31일"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="13sp"/>

