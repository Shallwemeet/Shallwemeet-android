<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <Button
            android:id="@+id/find"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="만들어 볼래요"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/meet"
            android:background="@drawable/round_button"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/meet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="보러 갈래요"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/find"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_button"
            android:elevation="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/new_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방금 올라온 따끈따끈한 미팅"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp" />

        <FrameLayout
            android:id="@+id/new_meeting"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <TextView
            android:id="@+id/near_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신 주변의 미팅"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp" />

        <FrameLayout
            android:id="@+id/near_meeting"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
    </LinearLayout>

</ScrollView>




