<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/ToolbarTheme"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:background="#20294b"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/home_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이런 미팅 어때요?"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_color_add_24"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/new_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방금 올라온 따끈따끈한 미팅 >"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp" />

        <FrameLayout
            android:id="@+id/new_meeting"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <TextView
            android:id="@+id/near_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신 주변의 미팅 >"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp" />

        <FrameLayout
            android:id="@+id/near_meeting"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <Button
            android:id="@+id/meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더 많은 방을 볼래요"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:background="@drawable/round_button"
            android:elevation="10dp"/>
    </LinearLayout>

</ScrollView>




