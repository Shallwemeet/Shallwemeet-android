<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".requestPage.RequestPage"
    android:background="@drawable/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView
            android:id="@+id/request_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/request_img1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_imageview" />

                <ImageView
                    android:id="@+id/request_img2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_imageview"/>

                <ImageView
                    android:id="@+id/request_img3"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_imageview"/>

            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/request_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/request_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/average_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="평균나이를 입력해주세요"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/request_calender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="날짜를 선택해주세요"/>

            <Spinner
                android:id="@+id/request_location1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_background"
                android:theme="@style/SpinnerTheme"
                android:spinnerMode="dialog"/>

            <Spinner
                android:id="@+id/request_location2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_background"
                android:theme="@style/SpinnerTheme"
                android:spinnerMode="dialog"/>


            <EditText
                android:id="@+id/request_num_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="인원수를 입력해주세요"
                android:maxLength="1"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="#"/>
                <EditText
                    android:id="@+id/request_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="키워드"
                    android:textSize="10sp"
                    android:maxLength="3"
                    android:inputType="textPersonName" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="#"/>
                <EditText
                    android:id="@+id/request_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:hint="키워드"
                    android:maxLength="3"
                    android:inputType="textPersonName" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="#"/>
                <EditText
                    android:id="@+id/request_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="키워드"
                    android:maxLength="3"
                    android:textSize="10sp"

                    android:inputType="textPersonName" />
            </LinearLayout>
            <Button
                android:id="@+id/request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="등록하기"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
