<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".src.successPage.SuccessPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/success_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/ToolbarTheme"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:background="#20294b"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/success_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매칭을 확인하세요"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/success_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#20294b"
            app:tabIndicatorHeight="6dp"
            app:tabIndicatorColor="#FFA896"
            app:tabTextColor="#ffffff"
            app:tabSelectedTextColor="#FFA896"
            app:tabRippleColor="@null">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/success_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청받았어요"
                android:textSize="20sp" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/success_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청했어요"
                android:textSize="17sp" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/success_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>